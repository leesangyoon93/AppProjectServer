<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView6" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/image_category"
                    android:src="@drawable/user_plain"
                    android:layout_weight="5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="오늘의 식사"
                    android:id="@+id/textView2"
                    android:gravity="left|center"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:layout_weight="2" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_meal"
                    android:checked="true" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/image_category2"
                    android:src="@drawable/user_plain"
                    android:layout_weight="5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="신체위생관리"
                    android:id="@+id/textView3"
                    android:gravity="left|center"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:layout_weight="2" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_bodyClean"
                    android:checked="true" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/image_category3"
                    android:src="@drawable/user_plain"
                    android:layout_weight="5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="산책/외출"
                    android:id="@+id/textView4"
                    android:gravity="left|center"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:layout_weight="2" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_activity"
                    android:checked="true" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/image_category4"
                    android:src="@drawable/user_plain"
                    android:layout_weight="5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="일상생활 동작훈련"
                    android:id="@+id/textView5"
                    android:gravity="left|center"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:layout_weight="2" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_moveTrain"
                    android:checked="true" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/image_category5"
                    android:src="@drawable/user_plain"
                    android:layout_weight="5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="특이사항"
                    android:id="@+id/textView6"
                    android:gravity="left|center"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:layout_weight="2" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_comment"
                    android:checked="true" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/image_category6"
                    android:src="@drawable/user_plain"
                    android:layout_weight="5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="배변횟수"
                    android:id="@+id/textView7"
                    android:gravity="left|center"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:layout_weight="2" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_restRoom"
                    android:checked="false" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/image_category7"
                    android:src="@drawable/user_plain"
                    android:layout_weight="5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="투약관리"
                    android:id="@+id/textView8"
                    android:gravity="left|center"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:layout_weight="2" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_medicine"
                    android:checked="false" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/image_category9"
                    android:src="@drawable/user_plain"
                    android:layout_weight="5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="인지,정신 기능훈련"
                    android:id="@+id/textView10"
                    android:gravity="left|center"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:layout_weight="2" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_mentalTrain"
                    android:checked="false" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/image_category11"
                    android:src="@drawable/user_plain"
                    android:layout_weight="5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="물리치료"
                    android:id="@+id/textView12"
                    android:gravity="left|center"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:layout_weight="2" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_physicalCare"
                    android:checked="false" />

            </LinearLayout>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listView" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>